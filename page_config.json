{
  "title": "Dynamic Page",
  "widgets": [
    {
      "type": "text",
      "data": "Hello, this is dynamic text!",
      "style": {
        "fontSize": 20,
        "color": "#FF0000"
      }
    },
    {
      "type": "text",
      "data": "Added text!",
      "style": {
        "fontSize": 25,
        "color": "#00FF00"
      }
    },
    {
      "type": "button",
      "data": "Click me",
      "action": "show_alert",
      "alert_message": "You clicked the button!",
      "style": {
        "backgroundColor": "#00FF00",
        "textColor": "#FFFFFF"
      }
    },
    {
      "type": "image",
      "url": "https://img.freepik.com/free-photo/adorable-young-eastern-cottontail-rabbit-closeup-green-grass_181624-38929.jpg",
      "style": {
        "width": 100,
        "height": 100
      }
    },
    {
      "type": "button",
      "data": "Click me 4",
      "action": "show_alert",
      "alert_message": "You clicked 4 the button!",
      "style": {
        "backgroundColor": "#00FF00",
        "textColor": "#FFFFFF"
      }
    }    
  ],
  "layout": {
    "type": "column",
    "alignment": "center"
  }
}
